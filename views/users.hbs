<div class="usuarios">
    <h1>Listar usuarios</h1>
    {{#if table}}
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>nome</th>
                <th>email</th>
            </tr>
        </thead>
        {{#each usuarios}}
        <tbody>
        <tr>
            <td>{{id}}</td>
            <td>{{nome}}</td>
            <td>{{email}}</td>
            <form action="/editar" method="post">
                <input type="hidden" name="id" value="{{id}}">
                <td><button class="button" type="submit">Editar</button></td>
            </form>
            <form action="/excluir" method="post">
                <input type="hidden" name="id" value="{{id}}">
                <td><button class="button" type="submit">Excluir</button></td>
            </form>
        </tr>
        </tbody>
        {{/each}}
    </table>
    {{else}}
        <div class="card">
            Nenhum dado encontrado
        </div>
    {{/if}}
    <div class="rodape">
        <a href="http://localhost:8081/registrar"><button class="button">Registrar um usuario novo</button></a>
    </div>
</div>